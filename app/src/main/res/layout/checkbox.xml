<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientselect">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Los que esten marcados seran los que visibles."
        android:textSize="30dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movies"
                android:textSize="20dp"
                />
            <CheckBox
                android:id="@+id/checkBoxHulu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hulu"
                />

            <CheckBox
                android:id="@+id/checkBoxParamountPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paramount+"
                />
            <CheckBox
                android:id="@+id/checkBoxPrimeVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PrimeVideo"
                />
            <CheckBox
                android:id="@+id/checkBoxDisney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disney+"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports"
                android:textSize="20dp"
                />
            <CheckBox
                android:id="@+id/checkBoxFormula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Formula"
                />

            <CheckBox
                android:id="@+id/checkBoxMLB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MLB"
                />
            <CheckBox
                android:id="@+id/checkBoxNBA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NBA"/>
            <CheckBox
                android:id="@+id/checkBoxNFL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NFL"/>
            <CheckBox
                android:id="@+id/checkBoxUFC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UFC"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TV"
                android:textSize="20dp"
                />
            <CheckBox
                android:id="@+id/checkBoxAppleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AppleTV"
                />
            <CheckBox
                android:id="@+id/checkBoxYouTube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YouTube"
                />
            <CheckBox
                android:id="@+id/checkBoxNetflix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Netflix"
                />



        </LinearLayout>

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        />



    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        />
</LinearLayout>
